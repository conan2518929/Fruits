            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请填写水果名称"
            android:maxLength="20"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:layout_marginLeft="10dp"
